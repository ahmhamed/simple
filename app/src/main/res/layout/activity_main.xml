<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahamed.myapplication.MainActivity">


    <TextView
        android:id="@+id/userInfo"
        android:text="My Name Is "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
    android:id="@+id/userName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/userInfo"

         />

    <Button
        android:id="@+id/ok"
        android:layout_width="67dp"
        android:layout_height="35dp"
        android:layout_below="@+id/userName"
        android:text="Ok"
        android:onClick="showName"
        />

    <Button
        android:id="@+id/aboutMe"
        android:onClick="callMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="About Me"

        android:layout_alignTop="@+id/ok"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <Button
        android:id="@+id/myEmail"
        android:onClick="callMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="My Email"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/aboutMe"
        android:layout_alignLeft="@+id/aboutMe"
        android:layout_alignStart="@+id/aboutMe" />


</RelativeLayout>
